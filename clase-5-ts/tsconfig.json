{
  "compilerOptions": {
    "target": "es6", // Indica la versión de JavaScript a la que se compilará (ECMAScript 2015 en este caso).
    "module": "es6", // Define el sistema de módulos a usar (aquí ECMAScript Modules en lugar de CommonJS).
    "outDir": "./dist", // Carpeta donde se guardarán los archivos compilados de TypeScript a JavaScript.
    "rootDir": "./", // Carpeta base donde buscará los archivos TypeScript de entrada.
    "strict": true, // Activa todas las comprobaciones estrictas de TypeScript (buenas prácticas y más seguridad).
    "esModuleInterop": true // Permite importar módulos CommonJS como si fueran ES Modules (compatibilidad).
  }
}